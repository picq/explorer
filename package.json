{
  "name": "btcv-rpc-explorer",
  "version": "1.0.3",
  "description": "Explorer for Bitcoin Vault and RPC-compatible blockchains",
  "private": false,
  "bin": "bin/cli.js",
  "scripts": {
    "start": "node ./bin/www",
    "refresh-mining-pool-configs": "node ./bin/refresh-mining-pool-configs.js",
    "commit": "cz",
    "commit-retry": "npx cz --retry"
  },
  "keywords": [
    "bitcoin vault",
    "blockchain"
  ],
  "author": "Dan Janosik <dan@47.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcoinvault/explorer.git"
  },
  "dependencies": {
    "async": "2.6.2",
    "basic-auth": "^2.0.1",
    "bitcoin-core": "^2.3.0",
    "bitcoinjs-lib": "^5.1.6",
    "body-parser": "~1.19.0",
    "cookie-parser": "^1.4.4",
    "crypto-js": "3.1.9-1",
    "csurf": "^1.10.0",
    "d3-scale-chromatic": "^1.5.0",
    "debug": "~4.1.1",
    "decimal.js": "10.1.1",
    "dotenv": "^8.0.0",
    "electrum-client": "github:chaintools/node-electrum-client#43a999036f9c5",
    "express": "^4.17.1",
    "express-session": "1.16.1",
    "jstransformer-markdown-it": "^2.1.0",
    "lru-cache": "5.1.1",
    "meow": "^5.0.0",
    "moment": "^2.24.0",
    "moment-duration-format": "2.2.2",
    "morgan": "^1.9.1",
    "node-gyp": "^7.1.2",
    "pug": "2.0.3",
    "qrcode": "1.3.3",
    "redis": "2.8.0",
    "request": "2.88.0",
    "serve-favicon": "^2.5.0",
    "simple-git": "1.112.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "less": "3.9.0",
    "npm-run-all": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
